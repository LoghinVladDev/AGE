#pragma once

#include <QCommon>
#include <QScreen>

struct QApplication {
  explicit QApplication(int&, char** = nullptr) noexcept {}

  static auto exec() noexcept -> int {
    return 0;
  }

  static auto primaryScreen() -> QScreen* { return &_primary; }

  static inline QScreen _primary;
};
